{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://neurolens.ai/schema/run.schema.json",
  "title": "NeuroLens Profiling Run",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "run_id",
    "created_at",
    "hardware",
    "software",
    "model",
    "timeline",
    "summary"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "format": "uuid",
      "$comment": "Stable unique identifier for the profiling run."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "$comment": "ISO-8601 timestamp when the run was recorded."
    },
    "hardware": {
      "type": "object",
      "additionalProperties": false,
      "required": ["vendor", "gpu_model", "gpu_count", "memory_gb", "driver_version"],
      "properties": {
        "vendor": {
          "type": "string",
          "$comment": "Hardware vendor name (e.g., NVIDIA)."
        },
        "gpu_model": {
          "type": "string"
        },
        "gpu_count": {
          "type": "integer",
          "minimum": 1
        },
        "memory_gb": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "driver_version": {
          "type": "string"
        }
      }
    },
    "software": {
      "type": "object",
      "additionalProperties": false,
      "required": ["backend", "version", "precision"],
      "properties": {
        "backend": {
          "type": "string",
          "enum": ["torch", "onnxrt", "tensorrt"]
        },
        "version": {
          "type": "string"
        },
        "precision": {
          "type": "string",
          "enum": ["fp32", "fp16", "int8"]
        }
      }
    },
    "model": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "framework_opset", "batch_size"],
      "properties": {
        "name": {"type": "string"},
        "framework_opset": {"type": "string"},
        "batch_size": {
          "type": "integer",
          "minimum": 1
        },
        "parameters_millions": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["env", "tags", "config"],
      "properties": {
        "env": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "driver_version",
            "cuda_version",
            "gpu_name",
            "os",
            "python_version"
          ],
          "properties": {
            "driver_version": {"type": "string"},
            "cuda_version": {"type": "string"},
            "gpu_name": {"type": "string"},
            "os": {"type": "string"},
            "python_version": {"type": "string"}
          }
        },
        "tags": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "config": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "batch_size",
            "sequence_length",
            "precision",
            "backend",
            "repeat"
          ],
          "properties": {
            "batch_size": {"type": "integer", "minimum": 1},
            "sequence_length": {"type": "integer", "minimum": 1},
            "precision": {"type": "string"},
            "backend": {"type": "string"},
            "repeat": {"type": "integer", "minimum": 0}
          }
        }
      }
    },
    "timeline": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "op_index",
          "op_name",
          "op_type",
          "start_ms",
          "end_ms",
          "duration_ms",
          "kernels"
        ],
        "properties": {
          "op_index": {
            "type": "integer",
            "minimum": 0,
            "$comment": "Sequence number of the operation in the execution timeline."
          },
          "op_name": {"type": "string"},
          "op_type": {"type": "string"},
          "start_ms": {
            "type": "number",
            "$comment": "Start time relative to run start in milliseconds.",
            "minimum": 0
          },
          "end_ms": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "duration_ms": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "api_launch_overhead_ms": {
            "type": "number",
            "minimum": 0
          },
          "kernels": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "name",
                "start_ms",
                "duration_ms",
                "achieved_occupancy",
                "warp_execution_efficiency",
                "l2_hit_rate",
                "dram_read_gb",
                "dram_write_gb"
              ],
              "properties": {
                "name": {"type": "string"},
                "start_ms": {
                  "type": "number",
                  "minimum": 0
                },
                "duration_ms": {
                  "type": "number",
                  "exclusiveMinimum": 0
                },
                "achieved_occupancy": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "warp_execution_efficiency": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "sm_efficiency": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "gpu_utilization": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "l2_hit_rate": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "dram_read_gb": {
                  "type": "number",
                  "minimum": 0
                },
                "dram_write_gb": {
                  "type": "number",
                  "minimum": 0
                },
                "bytes_read": {
                  "type": "number",
                  "minimum": 0
                },
                "bytes_write": {
                  "type": "number",
                  "minimum": 0
                }
              }
            }
          },
          "metrics": {
            "type": "object",
            "additionalProperties": false,
            "$comment": "Aggregated metrics at the operation level.",
            "properties": {
              "latency_ms": {
                "type": "number",
                "minimum": 0
              },
              "total_latency_ms": {
                "type": "number",
                "minimum": 0
              },
              "p50_ms": {
                "type": ["number", "null"],
                "minimum": 0
              },
              "p95_ms": {
                "type": ["number", "null"],
                "minimum": 0
              }
            },
            "required": []
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "total_duration_ms",
        "total_kernels",
        "top_bottleneck",
        "metrics"
      ],
      "properties": {
        "total_duration_ms": {
          "type": "number",
          "minimum": 0
        },
        "total_kernels": {
          "type": "integer",
          "minimum": 1
        },
        "top_bottleneck": {
          "type": "string",
          "$comment": "Human-readable identifier of the most impactful bottleneck."
        },
        "metrics": {
          "type": "object",
          "additionalProperties": false,
          "required": ["sm_efficiency", "gpu_utilization"],
          "properties": {
            "sm_efficiency": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "gpu_utilization": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "dram_throughput_gbps": {
              "type": "number",
              "minimum": 0
            },
            "ai_flops_per_byte": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      }
    }
  }
}
